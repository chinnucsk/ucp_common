{lib_dirs, ["deps"]}.
{deps, [
    {'lager', ".*", {git, "git://github.com/basho/lager.git", "master"}}
]}.

%% Erlang compiler options
{erl_opts, [warn_unused_vars, warn_unused_import, warn_exported_vars,
        debug_info, %fail_on_warning, % native
        {i, "include"},
        {d, debug},
        {parse_transform, lager_transform}]}.
